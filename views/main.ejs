<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ConvoBox - Main</title>
  <link rel="stylesheet" href="main.css">
  <script>
    window.userID = '<%= id %>';
    window.username = '<%= username %>'
  </script>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <header class="header">
      <h1>ConvoBox</h1>
      <div class="user-info">
        <span class="username">Hello, <%= username %></span>
        <button class="sidebar-toggle" id="sidebarToggle">☰</button>
        <button class="logout-button" onclick="logout()">Logout</button>
      </div>
    </header>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-content">
        <button class="close-sidebar" id="closeSidebar">×</button>
        <ul>
          <li><a href="profile">View Profile</a></li>
          <!-- Add more options here if needed -->
        </ul>
      </div>
    </aside>
    
    <!-- Main Content -->
    <main class="main-content">
      <!-- Favorite Groups Section -->
      <section class="favorite-groups">
        <h2>Your Favorite Groups</h2>
        <div class="group-list" id="favorite-groups">
        </div>
      </section>
      
      <!-- Suggested Groups Section -->
      <section class="suggested-groups">
        <h2>Suggested Groups</h2>
        <div class="group-list" id="suggested-groups"></div>
      </section>
      </main>
      
      <!-- Chat Window -->
      <div class="chat-window" id="chatWindow">
        <div class="chat-header">
          <span class="room-name">Room Name</span>
          <button class="close-btn" onclick="closeChatWindow()">X</button>
        </div>
        <div class="chat-messages" id="chatMessages">
          <!-- Messages will be displayed here -->
        </div>
        <div class="chat-input">
          <input type="text" id="messageInput" placeholder="Type your message here...">
          <button onclick="sendMessage({username:username})">Send</button>
        </div>
      </div>


    
  </div>
<script type="module" src="./main.js">
</script>
</body>
</html>
